	}
	.row.item{
		margin-bottom: 10px;
	}
	.row.item input{
		text-align: right
	}
	.modal-calculated{
		border-top: 2px solid #dddddd;
		padding-top: 10px;
	}
	#btn-add-discount{
		line-height: 30px;
		font-size: 14px;
		margin-right: 10px;
	}
