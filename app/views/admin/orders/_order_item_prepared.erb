			<div class="modal-head">
				<div class="col-xs-4">
					<div class="row">
						Item
					</div>
				</div>
				<div class="col-xs-2">
					<div class="row">
						Qty
					</div>
				</div>
				<div class="col-xs-3">
					<div class="row">
						Price
					</div>
				</div>
				<div class="col-xs-3">
					<div class="row text-center">
						Total
					</div>
				</div>
				<div class="clearfix"></div>
			</div>
			<% @orderItem.each do |item| %>
				<div class="row item order-item" id="item-<%= item.id %>" data-id="<%= item.id %>">
					<div class="col-xs-12">
						<div class="col-xs-4">
							<div class="row">
								<input type="checkbox" class="selectedCheckItem hidden" id="check-<%= item.id %>" data-id="<%= item.id %>" checked="" />&nbsp;
								<%= item.item %>
							</div>
						</div>
						<div class="col-xs-2">
							<div class="row">
								<%= item.quantity %>
							</div>
						</div>
						<div class="col-xs-3">
							<div class="row">
								<input type="text" onkeyup="calculate()" id="price-<%= item.id %>" name="price" data-id="<%= item.id %>" data-qty="<%= item.quantity %>" class="form-control hidden" value="0" />
								<%= item.item_amount %>
							</div>
						</div>
						<div class="col-xs-3">
							<div class="row text-right" id="total-<%= item.id %>" style="padding-right: 10px">
								<%= item.amount %>
							</div>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>
			<% end %>
			<div class="modal-calculated">
				<div class="row item">
					<div class="col-xs-12">
						<div class="col-xs-6">
							<div class="text-right">
								<button type="button" class=" hidden btn btn-link btn-xs" id="btn-add-discount" style="text-decoration: none">Add Discount</button>
								Discount
							</div>
						</div>
						<div class="col-xs-3">
							<div class="row">
								<div class="input-group">
									<input disabled="" type="text" onkeyup="calculate()" id="add-discount" name="add-discount" class="hidden form-control disabled" value="0" />
									<span class="input-group-addon hidden"><i class="fa fa-percent"></i></span>
									<%= @order.discount.to_i %> %
								</div>
							</div>
						</div>
						<div class="col-xs-3">
							<div class="row text-right" id="total-discount">
								- <%= @order.discounted_amount %>
							</div>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>

				<div class="row item">
					<div class="col-xs-12">
						<div class="col-xs-4">
							<div class="row">
								<strong>TOTAL</strong>
							</div>
						</div>
						<div class="col-xs-8">
							<div class="row text-right" style="padding-right: 10px" id="calculated-total">
								<strong><%= @order.grand_total %></strong>
							</div>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>
		<!-- </tbody>
	</table> -->
</form>

<script type="text/javascript">
	$(document).ready(function(){
		keyNumber("input[name=price]");
		keyNumber("input[name=add-discount]");

		$("#btn-add-discount").on('click', function(){
			if ($(this).hasClass('hasDiscount')) {
				$("input[name=add-discount]").val(0);
				$(this).html('Add discount');
				$(this).removeClass('hasDiscount');
				calculate();
			} else {
				$(this).html('Remove discount');
				$(this).addClass('hasDiscount');
			}

			if ($("input[name=add-discount]").hasClass("disabled")) {
				$("input[name=add-discount]").removeClass('disabled');
				$("input[name=add-discount]").removeAttr('disabled');
			} else {
				$("input[name=add-discount]").addClass('disabled');
				$("input[name=add-discount]").attr('disabled', '');
			}
		});

		$(".selectedCheckItem").on('click', function(){
			var id = $(this).data('id');
			if ($(this).is(':checked')){
				$("#price-" + id).removeAttr("disabled");
			} else {
				$("#price-" + id).attr("disabled","disabled");
				$("#price-" + id).val(0);
				calculate();
			}
		});

